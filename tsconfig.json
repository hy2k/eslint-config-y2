{
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"sourceMap": false,
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["node"],

		"strict": true,
		"skipLibCheck": true,
        "checkJs": true,
        "noEmit": true,
		"noImplicitAny": false,
		"strictNullChecks":false 
	}
}
