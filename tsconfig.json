{
	"exclude": ["node_modules", "dist"],
	"include": ["src"],
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"sourceMap": false,
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["node"],
		"outDir": "dist",

		"strict": true,
		"removeComments": true,
		"skipLibCheck": true,
		"checkJs": true,
		"noImplicitAny": false,
		"strictNullChecks": false
	}
}
